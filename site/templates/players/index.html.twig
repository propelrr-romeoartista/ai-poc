{% extends 'base.html.twig' %}

{% block title %}Player - List{% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-xl font-bold text-gray-200 mb-3">Players</h2>

    <div class="grid justify-items-end mb-3">
        <a class="rounded-md px-3 py-3 text-white bg-blue-700 mt-3 hover:bg-blue-500" href="#">Create</a>
    </div>

    <table class="min-w-full text-center text-black">
        <thead class="bg-gray-400 uppercase">
            <tr>
                <th class="px-6 py-3">Name</th>
                <th class="px-6 py-3">Team</th>
                <th class="px-6 py-3">Age</th>
                <th class="px-6 py-3">Position</th>
                <th class="px-6 py-3">Games Played</th>
                <th class="px-6 py-3">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for player in players %}
                <tr class="odd:bg-gray-100 even:bg-gray-200 border-b border-gray-700">
                    <td class="px-6 py-3 text-center">{{ player.name }}</td>
                    <td class="px-6 py-3 text-center">{{ player.team.name }}</td>
                    <td class="px-6 py-3 text-center">{{ player.age }}</td>
                    <td class="px-6 py-3 text-center">{{ player.position }}</td>
                    <td class="px-6 py-3 text-center">{{ player.gamesPlayed }}</td>
                    <td class="px-6 py-3 text-center">
                        <a href="{{ path('app_players_edit', {'id': player.id}) }}"
                            class="px-1 text-blue-900">Update</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="mt-3">
        {{ pagerfanta(players) }}
    </div>
</div>
{% endblock %}
